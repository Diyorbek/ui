{
  "version": "0.1.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "allowBranch": "master",
      "message": "%s"
    }
  },
  "ignoreChanges": [
    "**/pkg/**",
    "**/__tests__/**"
  ]
}
